<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bing.mymvpdemo.ui.main.MainActivity">
    <include layout="@layout/header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.bing.mymvpdemo.ui.widget.MyViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_above="@+id/radiogroup"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3b4c61"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="49dp" />

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:background="#2a3645"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/btn_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/drop_down_selector"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="3dp"
                android:text="任务"
                android:textColor="#878787"
                android:textSize="11dp" />

            <RadioButton
                android:id="@+id/btn_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/drop_down_selector"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="3dp"
                android:text="工作"
                android:textColor="#878787"
                android:textSize="11dp" />

            <RadioButton
                android:id="@+id/btn_contacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/drop_down_selector"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="3dp"
                android:text="联系人"
                android:textColor="#878787"
                android:textSize="11dp" />

            <RadioButton
                android:id="@+id/btn_own"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/drop_down_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="3dp"
                android:text="我的"
                android:textColor="#878787"
                android:textSize="11dp" />
        </RadioGroup>

    </RelativeLayout>

</LinearLayout>
